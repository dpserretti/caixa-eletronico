<h1>Minhas contas</h1>

<table>
  <thead>
    <tr>
      <th>Conta</th>
      <th>Saldo</th>
      <th>Status</th>
      <th colspan="2"> Ações </th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.number %></td>
        <td>R$ <%= account.balance %></td>
        <td><%= account.status %></td>
        <% if account.status == "Ativa" %>
          <td><%= link_to '<button class="botao">Editar</button>'.html_safe, edit_account_path(account) %></td>
          <td><%= link_to '<button class="botao">Encerrar</button>'.html_safe, account, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '<button class="acao">Nova conta</button>'.html_safe, new_account_path %>
