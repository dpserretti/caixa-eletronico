<h1>Realizar depósito</h1>



<form action="deposit/:id" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <div class="field">
    <label>Conta para depósito</label>
    <p><%= collection_select(:account_id, 0, Account.where(:users_id => current_user.id), :id, :number, prompt: "Selecione a conta") %></p>
  </div>
  <div class="field">
    <label>Valor</label>
    <p><input type="text" name="deposit[value]" /></p>
    <!-- pegar esse valor e acrescentar na conta com o numero passado -->
  </div>
  <button type="submit" value="Depositar">Depositar</button>
</form>


