<h1>Realizar depósito</h1>

<%= form_for Transfer.new, url: deposit_path, method: :post do |t| %>

  <input name="transfer[user_id]" id="transfer_user_id" type="hidden" value="<%= current_user.id %>">
  <div class="field">
    <label>Conta</label>
    <p><%= t.collection_select(:destiny_account, Account.where(:users_id => current_user.id), :id, :number, prompt: "Selecione a conta") %></p>
  </div>

  <div class="field">
    <label>Valor</label>
    <p><%= t.number_field :value %></p>
  </div>

  <%= t.submit "Depositar" %>

<% end %>


