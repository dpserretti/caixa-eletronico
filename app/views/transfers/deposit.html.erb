<h1>Realizar depósito</h1>

<script type="text/javascript">
  $(document).ready(function() {
    $("#new_transfer").validate({
      rules: {
        "transfer[destiny_account]": {
          required: true
        },
        "transfer[value]": {
          required: true,
          digits: true
        }
      },
      messages: {
        "transfer[destiny_account]": {
          required: "Campo obrigatório"
        },
        "transfer[value]": {
          required: "Campo obrigatório",
          digits: "Apenas números inteiros"
        }
      },
      errorPlacement: function(error, element) {
        offset = element.offset();
        error.insertAfter(element);
        error.addClass("validationError");
      }
    });
  });
</script>


<%= form_for Transfer.new, html: {autocomplete: "off"}, url: deposit_path, method: :post do |t| %>

  <input name="transfer[user_id]" id="transfer_user_id" type="hidden" value="<%= current_user.id %>">

  <div class="field">
    <label>Conta</label>
    <p><%= t.collection_select(:destiny_account, Account.where(:users_id => current_user.id, :status => "Ativa"), :id, :number, prompt: "Selecione a conta") %></p>
  </div>

  <div class="field">
    <label>Valor</label>
    <p><%= t.text_field :value %></p>
  </div>

  <div class="field">
    <%= t.submit "Depositar" %>
  </div>

<% end %>

<%= link_to '<button>Voltar</button>'.html_safe, accounts_path %>
