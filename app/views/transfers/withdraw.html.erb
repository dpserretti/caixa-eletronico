<h1>Realizar saque</h1>

<script type="text/javascript">
  $(document).ready(function() {
    $("#new_transfer").validate({
      rules: {
        "transfer[origin_account]": {
          required: true
        },
        "transfer[value]": {
          required: true,
          pattern: /^(\d+|\d+,\d{1,2})$/
        },
        password: {
          required: true,
          minlength: 8
        }
      },
      messages: {
        "transfer[origin_account]": {
          required: "Campo obrigatório"
        },
        "transfer[value]": {
          required: "Campo obrigatório",
          pattern: "Apenas números. Máximo 2 casas decimais."
        },
        password: {
          required: "Campo obrigatório",
          minlength: "Mínimo 8 caracteres"
        }
      },
      errorPlacement: function(error, element) {
        offset = element.offset();
        error.insertAfter(element.parent());
        error.addClass("validationError");
      }
    });
  });
</script>

<%= form_for Transfer.new, html: {autocomplete: "off", :role => 'form'}, url: withdraw_path, method: :post do |t| %>

  <input name="transfer[user_id]" id="transfer_user_id" type="hidden" value="<%= current_user.id %>">

  <div class="field">
    <label>Conta</label>
    <p><%= t.collection_select(:origin_account, Account.where(:user_id => current_user.id, :status => "Ativa"), :id, :number, prompt: "Selecione a conta") %></p>
  </div>

  <div class="field">
    <label>Valor</label>
    <p><%= t.text_field :value %></p>
  </div>

  <div class="field">
    <label>Digite sua senha:</label>
    <p><%= password_field_tag :password %></p>
  </div>

  <div class="field">
    <%= t.submit "Sacar", :class => "acao" %>
  </div>

<% end %>

<%= link_to '<button>Voltar</button>'.html_safe, accounts_path %>
